HACC_IO:
  build:
    make:
     target: "all"
    files : "@BUILDPATH@/Makefile"

run_HACC_IO:
  group: 'GRPMPI'
  run:
    program: "HACC_IO"
    depends_on: {'test':  [ "HACC_IO" ]}
    iterate:
      n_mpi:
         values: [4]
      n_proc:
         values: [1, 2]
      program:
        args:
          values: "30000000 @BUILDPATH@/out.dat"
