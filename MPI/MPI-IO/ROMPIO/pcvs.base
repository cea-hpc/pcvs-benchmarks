build_rompio:
  build:
    make:
      target: ""
    files: "@BUILDPATH@/src/Makefile"

run_rompio:
  group: 'GRPMPI'
  run:
    depends_on: [ "build_rompio" ]
    program: "src/rompio.x86_64.x"
    iterate:
        n_proc:
          values: [1, 2]
        n_mpi:
          values: [4]
        program:
          args:
            values: "-fname @BUILDPATH@/out.dat  -size 1024 8192 65536 -cwrite -cread  -nw 50 -strided"
