#!/bin/sh

pcvs_src_current=$pcvs_src/$1
#pcvs_build_current=$pcvs_testbuild/$1

for t in `ls $pcvs_src_current`
do
	#remove extension
	bin=`echo "$t" | perl -pe "s/\..*$//"`

	#generate YAML entry
	echo "$bin:"
	echo "    type: 'complete'"
	echo "    herit: *GRPMPI"
	echo "    cargs: ' -lpthread '"
	echo "    files: \"@SRCPATH@/$t\""
	echo "    bin: $bin"
done
exit 0
