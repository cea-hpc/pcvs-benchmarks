#!/bin/sh

pcvs_src_current=$pcvs_src/$1
#pcvs_build_current=$pcvs_testbuild/$1

for t in `find $pcvs_src_current -name '*.c'`
do
	#remove extension
	bin=`echo "$t" | sed -Ee 's,.*/(.*)\..*$,\1,'`

	#generate YAML entry
	echo "$bin:
    group: 'GRPMPI'
    build:
        files: '@SRCPATH@/$t'
        cflags: ' -lpthread '
    run:
        program: '$bin'
"
done
exit 0
